<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teamA_Name_TestView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:text="Team A"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teamA_Score_TestView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:text="0"
                android:textSize="56sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamA_FieldGoal_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:onClick="fieldGoalTeamA"
                android:text="Field Goal"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamA_Safety_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:onClick="safetyTeamA"
                android:text="Safety"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamA_Touchdown_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:onClick="touchdownTeamA"
                android:text="Touchdown"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamA_ExtraPoint_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:onClick="extraPointTeamA"
                android:text="Extra Point Attempt"
                android:textStyle="bold" />

            <ImageView
                android:src="@drawable/football_background"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teamB_Name_TestView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:text="Team A"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teamB_Score_TestView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:text="0"
                android:textSize="56sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamB_FieldGoal_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:onClick="fieldGoalTeamB"
                android:text="Field Goal"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamB_Safety_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:onClick="safetyTeamB"
                android:text="Safety"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamB_Touchdown_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:onClick="touchdownTeamB"
                android:text="Touchdown"
                android:textStyle="bold" />

            <Button
                android:id="@+id/teamB_ExtraPoint_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:onClick="extraPointTeamB"
                android:text="Extra Point Attempt"
                android:textStyle="bold" />

            <ImageView
                android:src="@drawable/football_background"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reset_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="32dp"
        android:text="Reset"
        android:textStyle="bold"
        android:onClick="resetScore"/>

</RelativeLayout>